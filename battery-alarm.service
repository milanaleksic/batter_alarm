[Unit]
Description=Battery Alarm
Wants=battery-alarm.timer

[Service]
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/aleksic/.Xauthority
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1001/bus
User=aleksic
Group=aleksic
ExecStart=/usr/bin/python3 /home/aleksic/SourceCode/battery_alarm/battery_alarm.py

[Install]
WantedBy=battery-alarm.target
